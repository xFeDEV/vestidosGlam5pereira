---
// src/pages/contacto.astro
import BaseLayout from "@layouts/BaseLayout.astro"; // Ajusta la ruta a tu layout
import ContactSection from "@components/Contact/Contact.astro"; // Tu sección de contacto existente (que usa ContactWhatsApp)
import CountdownOffer from "@components/Contact/CountdownOffer.astro"; // Componente de oferta con cupón
import Location from "@components/Location/Location.astro"; // Componente de ubicación con mapa

const pageTitle = "Contacta con Glam 5.0 - Pereira";
const pageDesc = "Agenda tu cita o consulta sobre nuestros vestidos de novia, quinceañera y graduación en Pereira. ¡Oferta especial por tiempo limitado!";
---

<BaseLayout title={pageTitle} description={pageDesc}>
  <div class="h-9"></div> {/* Espacio para el encabezado */}
  
  {/* 1. Componente: Gancho con Oferta y Cupón Descargable */}
  <div class="site-container py-12 md:py-16">
    <CountdownOffer />
  </div>

  {/* 2. Sección de Ubicación con Mapa */}
  <Location />

  {/* 3. Sección de Contacto */}
  <ContactSection />
</BaseLayout>