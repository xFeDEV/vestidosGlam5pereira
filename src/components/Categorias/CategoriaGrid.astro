---
// src/components/Categorias/CategoriaGrid.astro
/**
 * * Grid para mostrar tarjetas de introducción de categorías de vestidos.
 */
 import type { CollectionEntry } from "astro:content";

// Importa la tarjeta específica para categorías
import CategoriaCard from "@components/CategoriaCard/CategoriaCard.astro"; // Ajusta la ruta si es necesario

interface Props {
    // Espera un array de entradas de la colección 'categoriasVestidos'
    categorias: CollectionEntry<"categoriasVestidos">[];
    noTransitions?: boolean; // Mantenemos la opción de transiciones
}

const { categorias, noTransitions = false } = Astro.props;
---

{/* Mantenemos la estructura del grid original, ajusta si es necesario */}
<div class="grid gap-x-4 gap-y-10 pt-8 md:grid-cols-3 md:pt-12">
    {/* Mapea sobre las 'categorias' y usa 'CategoriaCard' */}
    {categorias.map((categoria) => (
        <CategoriaCard
            categoria={categoria}
            direction="vertical" {/* O 'horizontal' según necesites */}
            noTransitions={noTransitions}
        />
    ))}
</div>